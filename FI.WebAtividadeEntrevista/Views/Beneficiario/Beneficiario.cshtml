@using FI.AtividadeEntrevista.DML;

@model List<Beneficiario>

<div class="modal fade" id="modalBeneficiarios" tabindex="-1" role="dialog" aria-labelledby="modalBeneficiariosLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <!-- Cabeçalho -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalBeneficiariosLabel">Beneficiários</h4>
            </div>

            <div class="modal-body">

                <!-- Formulário para envio de um novo beneficiário -->
                <form class="form-inline" id="formBeneficiario">
                    <div class="form-group">
                        <label for="CpfBeneficiario">CPF:</label>
                        <input type="text" class="form-control" id="CpfBeneficiario" placeholder="Ex.: 010.011.111-00" />
                    </div>
                    <div class="form-group">
                        <label for="NomeBeneficiario">Nome:</label>
                        <input type="text" class="form-control" id="NomeBeneficiario" placeholder="Ex.: Maria" />
                    </div>
                    <div class="form-group">
                        <button type="button" style="margin-top: 24px" class="btn btn-success">Incluir</button>
                    </div>
                </form>

                <!-- Grid de beneficiários - estático por hora -->
                <table class="table table-striped table-hover" style="margin-top: 20px;">
                    <thead>
                        <tr>
                            <th>CPF</th>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>000.000.001-91</td>
                            <td>Beneficiário João</td>
                            <td>
                                <button type="button" class="btn btn-primary btn-sm">Alterar</button>
                                <button type="button" class="btn btn-danger btn-sm">Excluir</button>
                            </td>
                        </tr>
                        <tr>
                            <td>000.000.002-72</td>
                            <td>Beneficiário José</td>
                            <td>
                                <button type="button" class="btn btn-primary btn-sm">Alterar</button>
                                <button type="button" class="btn btn-danger btn-sm">Excluir</button>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>

            <!-- Rodapé -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>

        </div>
    </div>
</div>
