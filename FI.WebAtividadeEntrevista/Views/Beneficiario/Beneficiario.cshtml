@using FI.AtividadeEntrevista.DML;

@model List<Beneficiario>

<div class="modal fade" id="modalBeneficiarios" tabindex="-1" role="dialog" aria-labelledby="modalBeneficiariosLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <!-- Cabeçalho -->
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="modalBeneficiariosLabel">Beneficiários</h4>
            </div>

            <div class="modal-body">

                <!-- Formulário para envio de um novo beneficiário -->
                <form class="form-inline" id="formBeneficiario">
                    <div class="form-group">
                        <label for="CpfBeneficiario">CPF:</label>
                        <input type="text" class="form-control" id="CpfBeneficiario" placeholder="Ex.: 010.011.111-00" />
                    </div>
                    <div class="form-group">
                        <label for="NomeBeneficiario">Nome:</label>
                        <input type="text" class="form-control" id="NomeBeneficiario" placeholder="Ex.: Maria" />
                    </div>
                    <div class="form-group">
                        <button type="button" id="incluir" style="margin-top: 24px" class="btn btn-success">Incluir</button>
                    </div>
                </form>

                <!-- Grid de beneficiários -->
                <table class="table table-striped table-hover" style="margin-top: 20px;">
                    <thead>
                        <tr>
                            <th>CPF</th>
                            <th>Nome</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="beneficiariosBody">
                        @if (Model != null && Model.Any())
                        {
                            foreach (Beneficiario beneficiario in Model)
                            {
                                <tr>
                                    <td>@beneficiario.CPF</td>
                                    <td>@beneficiario.Nome</td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-sm" data-cpf="@beneficiario.CPF" data-id="@beneficiario.Id">Alterar</button>
                                        <button type="button" class="btn btn-danger btn-sm"  data-cpf="@beneficiario.CPF" data-id="@beneficiario.Id">Excluir</button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3">Nenhum beneficiário cadastrado.</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>

            <!-- Rodapé -->
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>

        </div>
    </div>
</div>

<script>
    var beneficiarios = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model));
</script>